        "mv /tmp/ansible.cfg /etc/ansible/ansible.cfg &> /tmp/m4.log\n",
        "mv /tmp/reverseproxy.yml /etc/ansible/playbooks/reverseproxy.yml &> /tmp/m5.log\n",
        "mv /tmp/api.yml /etc/ansible/playbooks/api.yml &> /tmp/m6.log\n",
        "mv /tmp/ci.yml /etc/ansible/playbooks/ci.yml &> /tmp/m7.log\n",
	"mv /tmp/reverseproxy-vpn.yml /etc/ansible/playbooks/reverseproxy-vpn.yml &> /tmp/m8.log\n",
	"mv /tmp/vpn-mgmt.yml /etc/ansible/playbooks/vpn-mgmt.yml &> /tmp/m9.log\n",
